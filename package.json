{
  "name": "zlack",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "api",
    "shared"
  ],
  "scripts": {
    "dev:expo": "expo start",
    "dev:api": "tsx scripts/check-env.ts && dotenv -- npm run dev --workspace=api",
    "dev:zero-cache": "dotenv -- zero-cache-dev -p shared/src/schema.ts",
    "dev:db-up": "docker compose --env-file .env -f ./docker/docker-compose.yml up",
    "dev:db-down": "docker compose --env-file .env -f ./docker/docker-compose.yml down",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "format": "npx prettier --write .",
    "generate": "dotenv -- npm run generate --workspace=shared"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.7",
    "@expo/vector-icons": "^14.1.0",
    "@zlack/shared": "*",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@rocicorp/zero": "0.23.2025082700",
    "eas-cli": "^16.17.4",
    "expo": "~53.0.20",
    "expo-blur": "~14.1.5",
    "expo-constants": "~17.1.7",
    "expo-crypto": "^14.1.5",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.4",
    "expo-secure-store": "^14.2.3",
    "expo-splash-screen": "~0.30.10",
    "expo-sqlite": "^15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.10",
    "expo-web-browser": "~14.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@types/react": "~19.0.10",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-expo": "~9.2.0",
    "tsx": "^4.20.4",
    "typescript": "~5.9.2"
  }
}
