{
  "name": "zslack",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "api",
    "shared"
  ],
  "scripts": {
    "dev:expo": "expo start",
    "dev:api": "bun scripts/check-env.ts && dotenv -- bun run dev --filter=@zslack/api",
    "dev:zero-cache": "dotenv -- zero-cache-dev -p shared/src/schema.ts",
    "dev:db-up": "docker compose --env-file .env -f ./docker/docker-compose.yml up",
    "dev:db-down": "docker compose --env-file .env -f ./docker/docker-compose.yml down",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "format": "bunx prettier --write .",
    "generate": "dotenv -- bun run generate --filter=@zslack/shared"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.7",
    "@expo/vector-icons": "^15.0.2",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@rocicorp/zero": "0.24.2025101500",
    "@zslack/shared": "*",
    "better-auth": "^1.3.28",
    "expo": "^54.0.13",
    "expo-blur": "~15.0.7",
    "expo-constants": "~18.0.9",
    "expo-crypto": "~15.0.7",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.9",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.12",
    "expo-secure-store": "~15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-sqlite": "~16.0.8",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@types/react": "~19.1.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-expo": "~10.0.0",
    "typescript": "~5.9.2"
  }
}
